<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/navigation"
            app:startDestination="@id/welcomeFragment">

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="welcome.WelcomeFragment"
        android:label="WelcomeFragment">
        <action
            android:id="@+id/action_welcome_to_brackets"
            app:destination="@id/bracketsFragment" />
    </fragment>
    <fragment
        android:id="@+id/bracketsFragment"
        android:name="bracket.BracketsFragment"
        android:label="BracketsFragment" >
        <argument
            android:name="number_of_teams"
            app:argType="integer" />
        <action
            android:id="@+id/action_bracketsFragment_to_bottomSheet"
            app:destination="@id/bottomSheet" />
    </fragment>
    <dialog
        android:id="@+id/bottomSheet"
        android:name="BottomSheet.BottomSheetFragment"
        tools:layout="@layout/bottom_sheet_layout" >
        <argument
            android:name="team1"
            app:argType="string" />
        <argument android:name="team2"
            app:argType="string" />
        <action
            android:id="@+id/action_bottomSheet_to_bracketsFragment"
            app:destination="@id/bracketsFragment" />
    </dialog>
</navigation>